<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingHorizontal="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/message_system_notice_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_red_dot"
                    android:layout_marginEnd="9dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/message_system_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="未读系统消息"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        <TextView
            android:id="@+id/message_system_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="12-21"
            android:gravity="end"
            android:textSize="12sp"
            android:textColor="@color/secondaryGrey"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/message_system_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="这是一条信息这是一条信息这是一条信息这是一条信息这是一条信息这是一条信息这是一条信息这是一条信息这是一条信息这是一条信息"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginBottom="15dp"
        android:lineSpacingExtra="1dp"
        android:textColor="@color/secondaryGrey"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>
</LinearLayout>