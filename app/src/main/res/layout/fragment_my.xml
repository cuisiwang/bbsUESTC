<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homeActivity.my.MyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/my_header_card_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        app:contentPadding="18dp"
        app:cardBackgroundColor="#F0F0F0"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="7dp">
            <ImageView
                android:id="@+id/my_header_card_icon_iv"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/bg_circle_imageview"
                android:layout_alignParentStart="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                android:layout_toEndOf="@id/my_header_card_icon_iv">
                <TextView
                    android:id="@+id/my_header_card_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="河畔用户123"
                    android:textSize="22sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/my_header_card_level_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等级1"
                    android:textColor="@color/primaryBlue"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_arrow_right"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帖子"
        android:layout_marginStart="15dp"
        android:textSize="17sp"
        android:textColor="@color/secondaryGrey"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号"
        android:layout_marginStart="15dp"
        android:textSize="17sp"
        android:textColor="@color/secondaryGrey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="应用"
        android:layout_marginStart="15dp"
        android:textSize="17sp"
        android:textColor="@color/secondaryGrey"/>
    </LinearLayout>
</ScrollView>