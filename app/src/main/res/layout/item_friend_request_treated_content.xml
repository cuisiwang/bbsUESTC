<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/friend_request_treated_userIcon_iv"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_blacklist_head"
            android:layout_marginTop="8dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/friend_request_treated_userName_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="河畔用户1"
                android:lines="1"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="请求添加你为好友"
                android:textColor="@color/secondaryGrey"
                android:textSize="11sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/friend_request_option_chose_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已同意"
                android:textColor="@color/secondaryGrey"
                android:textSize="11sp"/>
            <ImageView
                android:layout_marginStart="14dp"
                android:layout_marginEnd="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_options"
                android:layout_gravity="center_vertical"
                android:id="@+id/friend_request_treated_option_iv"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="1dp"
        android:layout_marginStart="59dp"
        android:background="@color/grey"/>
</LinearLayout>